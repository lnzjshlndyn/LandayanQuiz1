<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.landayan.landayanquiz1.MainActivity"
    android:orientation="vertical">

    <ListView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/androidListview"
        android:layout_marginBottom="50dp"
        android:layout_above="@+id/homeButton"
        android:layout_centerHorizontal="true">
    </ListView>

    <Button
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:text="Home"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="49dp"
        android:id="@+id/homeButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/firstButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/homeButton"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/homeButton"
        android:layout_toRightOf="@+id/homeButton"
        android:text="1"
        android:onClick="goFirst"/>

    <Button
        android:id="@+id/secondButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="2"
        android:layout_alignBaseline="@+id/firstButton"
        android:layout_alignBottom="@+id/firstButton"
        android:layout_toRightOf="@+id/firstButton"
        android:layout_toEndOf="@+id/firstButton"
        android:onClick="goSecond"/>

    <Button
        android:id="@+id/thirdButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="3"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_alignBaseline="@+id/secondButton"
        android:layout_alignBottom="@+id/secondButton"
        android:layout_toRightOf="@+id/secondButton"
        android:layout_toEndOf="@+id/secondButton"
        android:onClick="goThird"/>

</RelativeLayout>
